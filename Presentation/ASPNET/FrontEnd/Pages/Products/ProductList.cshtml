@page
@{
    ViewData["Title"] = "Product List";
}

<div id="app" v-cloak>
    <div class="row">
        <div class="col-12">
            <div class="grid-container">
                <div ref="mainGridRef"></div>
            </div>
        </div>
    </div>
    <div class="modal fade" ref="mainModalRef" id="MainModal" aria-hidden="true" tabindex="-1" data-bs-focus="false" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ state.mainTitle }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" v-model="state.id" id="Id" name="Id" />
                    <form id="MainForm">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Main Info</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label for="Name">Name</label>
                        <input ref="nameRef" type="text" v-model="state.name" class="form-control">
                                                <label class="text-danger">{{ state.errors.name }}</label>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="Number">Number</label>
                                                <input ref="numberRef" v-model="state.number" readonly>
                                            </div>
                                        </div>
                <div class="row mb-2">
                    <div class="col-md-6">
                        <label for="Barcode">Barcode</label>
                        <input ref="barcodeRef" type="text" class="form-control" placeholder="Scan or enter barcode" v-model="state.barcode">
                    </div>
                    <!-- Unit Price moved to the inline pricing row below -->
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="InternalCode">Internal Code</label>
                        <input type="text" v-model="state.internalCode" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label for="GisEgsCode">GIS / EGS Code</label>
                        <input type="text" v-model="state.gisEgsCode" class="form-control" />
                    </div>
                    <!-- Company Name removed from product modal -->
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="Model">Model / الوصف</label>
                        <textarea v-model="state.model" id="Model" name="Model" class="form-control" rows="3" style="width:100%"></textarea>
                    </div>
                    <div class="col-md-8">
                        <div class="row g-2 align-items-end">
                            <div class="col-4">
                                <label for="UnitPrice">Unit Price</label>
                                <input ref="unitPriceRef" class="form-control form-control-sm" v-model="state.unitPrice" />
                                <label class="text-danger small">{{ state.errors.unitPrice }}</label>
                            </div>
                            <div class="col-4">
                                <label for="Discount">Discount</label>
                                <input ref="discountInputRef" class="form-control form-control-sm" v-model.number="state.discount" />
                            </div>
                            <div class="col-4">
                                <label for="PriceAfterDiscount">Price After Discount</label>
                                <input ref="priceAfterDiscountRefInput" class="form-control form-control-sm" v-model="state.priceAfterDiscount" readonly />
                            </div>
                        </div>
                        <!-- Service Fee / Additional Tax / Additional Fee removed -->
                    </div>
                </div>
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label for="UnitMeasureId">Unit Measure</label>
                                                <div ref="unitMeasureIdRef"></div>
                                                <label class="text-danger">{{ state.errors.unitMeasureId }}</label>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="ProductGroupId">Product Group</label>
                                                <div ref="productGroupIdRef"></div>
                                            <label for="ProductCompanyId">Company Name</label>
                                            <div class="d-flex align-items-center">
                                                <div id="productCompanyPlaceholder"></div>
                                                <button type="button" id="productCompanyClearBtn" class="btn btn-sm btn-outline-secondary ms-2">Clear</button>
                                            </div>
                                                <label class="text-danger">{{ state.errors.productGroupId }}</label>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <label for="VatId">VAT</label>
                                                <div ref="vatIdRef"></div>
                                                <label class="text-danger">{{ state.errors.vatId }}</label>
                                            </div>
                                           @*  <div class="col-md-6">
                                                <label for="TaxId">Tax</label>
                                                <div ref="taxIdRef"></div>
                                                <label class="text-danger">{{ state.errors.taxId }}</label>
                                            </div> *@
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-6">
                                                <div class="form-check mt-4">
                                                    <input v-model="state.physical" id="Physical" name="Physical" type="checkbox" class="form-check-input">
                                                    <label for="Physical" class="form-check-label">Is Physical Product?</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-12">
                                                <label for="Description">Description</label>
                                                <textarea v-model="state.description" id="Description" name="Description" class="form-control form-control-sm" rows="4" style="width:100%; font-size:0.9rem"></textarea>
                                            </div>
                                        </div>

                                        <div class="card mb-3">
                                            <div class="card-header">
                                                <h5>Taxes</h5>
                                                <button type="button" class="btn btn-sm btn-outline-primary" v-on:click="addTaxRow">
                                                    + Add Tax
                                                </button>
                                            </div>
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Main Code</th>
                                                                <th>Sub Code</th>
                                                                <th>Tax Category</th>
                                                                <th>Percentage</th>
                                                                <th>Tax Value</th>
                                                                <th>Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr v-for="(tax, index) in state.productTaxes" :key="index">
                                                                <td>
                                                                    <select v-model="tax.taxMainCode" class="form-control form-control-sm"
                                                                            v-on:change="onTaxMainCodeChange(index)">
                                                                        <option value="">Select Main Code</option>
                                                                        <option v-for="mainCode in getUniqueMainCodes()"
                                                                                :key="mainCode"
                                                                                :value="mainCode">
                                                                            {{ mainCode }}
                                                                        </option>
                                                                    </select>
                                                                </td>
                                                                <td>
                                                                    <select v-model="tax.taxSubCode" class="form-control form-control-sm"
                                                                            :disabled="!tax.taxMainCode"
                                                                            v-on:change="onTaxSubCodeChange(index)">
                                                                        <option value="">Select Sub Code</option>
                                                                        <option v-for="subCode in getSubCodesByMainCode(tax.taxMainCode)"
                                                                                :key="subCode.code"
                                                                                :value="subCode.code">
                                                                            {{ subCode.code }} - {{ subCode.description }}
                                                                        </option>
                                                                    </select>
                                                                </td>
                                                                <td>
                                                                    <input type="text" v-model="tax.taxCategoryName"
                                                                           class="form-control form-control-sm" readonly />
                                                                </td>
                                                                <td>
                                                                    <input type="text" v-model="tax.percentage"
                                                                           class="form-control form-control-sm text-end" readonly />
                                                                </td>
                                                                <td>
                                                                    <input type="number" v-model="tax.taxValue"
                                                                           class="form-control form-control-sm text-end" readonly />
                                                                    <small class="text-muted">Calculated: {{ formatCurrency(tax.taxValue) }}</small>
                                                                </td>
                                                                <td>
                                                                    <button type="button" class="btn btn-sm btn-danger"
                                                                            v-on:click="removeTaxRow(index)">
                                                                        ×
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                        <tfoot v-if="state.productTaxes.length > 0">
                                                            <tr>
                                                                <td colspan="3" class="text-end"><strong>Total Taxes:</strong></td>
                                                                <td class="text-end">
                                                                    <strong>{{ calculateTotalTaxPercentage().toFixed(2) }}%</strong>
                                                                </td>
                                                                <td class="text-end">
                                                                    <strong>{{ formatCurrency(calculateTotalTaxValue()) }}</strong>
                                                                </td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="5" class="text-end"><strong>Price After Taxes:</strong></td>
                                                                <td class="text-end">
                                                                    <strong>{{ formatCurrency(calculatePriceAfterTaxes()) }}</strong>
                                                                </td>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button"
                            id="MainSaveButton"
                            class="btn"
                            v-bind:class="state.deleteMode ? 'btn-danger' : 'btn-primary'"
                            v-on:click="handler.handleSubmit"
                            v-bind:disabled="state.isSubmitting">
                        <span class="spinner-border spinner-border-sm me-2" v-if="state.isSubmitting" role="status" aria-hidden="true"></span>
                        <span v-if="!state.isSubmitting">{{ state.deleteMode ? 'Delete' : 'Save' }}</span>
                        <span v-else>{{ state.deleteMode ? 'Deleting...' : 'Saving...' }}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/FrontEnd/Pages/Products/ProductList.cshtml.js"></script>
}